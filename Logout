 <?php
defined('BASEPATH') OR exit('No direct script access allowed');

class Logout extends MY_Controller {

	public function index(){
		session_destroy();    // session_destroy â€” Destroys all data registered to a session
		redirect(base_url()); // mo redirect after ma destroy ang session.
	}
}
